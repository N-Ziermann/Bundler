{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "lib": ["ES2021"],
    "downlevelIteration": true,
    "module": "ESNext",
    "skipLibCheck": true
  },
  "include": ["packages", "examples"],
  "exclude": ["node_modules", "**/build"]
}
