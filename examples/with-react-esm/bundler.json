{
  "entryPoint": "src/index.tsx",
  "projectRoot": ".",
  "extensions": [".jsx", ".tsx", ".js", ".ts"],
  "outputDirectory": "build",
  "loaders": {
    "asset": {
      "extensions": [".png", ".svg"]
    },
    "css": {
      "extensions": [".css"]
    }
  },
  "babelConfig": {
    "presets": [
      "@babel/preset-react",
      ["@babel/preset-typescript", { "isTSX": true, "allExtensions": true }]
    ],
    "plugins": ["@babel/plugin-transform-modules-commonjs"]
  },
  "publicDirecotry": "public"
}
